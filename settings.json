{
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.autoClosingBrackets": "beforeWhitespace",
    "editor.autoClosingQuotes": "beforeWhitespace",
    "editor.fontSize": 16,
    "editor.fontFamily": "'PT Mono','Fira Code',Monaco,'Courier New','PingFang SC','Microsoft YaHei',monospace",
    "editor.detectIndentation": false,
    "editor.minimap.enabled": true,
    "editor.minimap.maxColumn": 140,
    "editor.parameterHints.cycle": true,
    "editor.quickSuggestionsDelay": 100,
    "editor.renderWhitespace": "all",
    "editor.showFoldingControls": "always",
    "editor.snippetSuggestions": "top",
    "editor.scrollBeyondLastLine": false,
    "editor.wordWrap": "on",
    "workbench.colorCustomizations": {
        // "activityBar.background": "#3f3f3f",
        //     "editor.background": "#00000000",
        //     "terminal.background": "#000000",
        //     "terminal.foreground": "#cccccc",
        //     "titleBar.activeBackground": "#3f3f3f",
        //     "statusBar.background": "#3f3f3f"
    },
    "workbench.colorTheme": "One Dark Pro",
    "workbench.enableExperiments": false,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.settings.editor": "json",
    "workbench.settings.enableNaturalLanguageSearch": false,
    "workbench.statusBar.feedback.visible": false,
    "workbench.tree.horizontalScrolling": true,
    "window.menuBarVisibility": "default",
    "window.newWindowDimensions": "inherit",
    "window.restoreWindows": "all",
    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}",
    "window.zoomLevel": 0,
    "files.associations": {
        "*.extension": "html",
        "*.txt": "markdown",
        "plaintext": "markdown"
    },
    "files.autoGuessEncoding": true,
    "files.exclude": {
        "* */.git": false,
        "* */.svn": false
    },
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "search.exclude": {
        "**/target/**": true,
        "**/node_modules": true,
        "**/bower_components": true
    },
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "breadcrumbs.enabled": true,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    /* 扩展相关 */
    "extensions.autoUpdate": false,
    "extensions.showRecommendationsOnlyOnDemand": true,
    /* 比较 */
    "partialDiff.commandsOnContextMenu": {
        "markSection1": true,
        "markSection2AndTakeDiff": true,
        "diffSelectionWithClipboard": true,
        "diffVisibleEditors": false,
        "togglePreComparisonTextNormalizationRules": true
    },
    "partialDiff.enableTelemetry": false,
    "partialDiff.preComparisonTextNormalizationRules": [
        {
            "name": "Replace tabs with whitespaces",
            "match": "\t",
            "replaceWith": "    "
        },
        {
            "name": "One space after comma",
            "match": ", *([^,\n]+)",
            "replaceWith": ", $1"
        }
    ],
    /* git */
    "git.ignoreMissingGitWarning": true,
    "git.ignoreLegacyWarning": true,
    "git.enabled": true,
    "git.path": "C:/Program Files/Git/bin/git.exe",
    /* markdown */
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": false,
        "files.trimTrailingWhitespace": false
    },
    "markdown.preview.breaks": true,
    "markdown.preview.fontFamily": "'PT Serif','Times New Roman','Hiragino Sans GB','Microsoft YaHei'",
    "markdown.preview.fontSize": 16,
    "markdown.preview.lineHeight": 1.5,
    // "markdown.styles": [],
    "markdownExtended.imageOmitBackground": true,
    "markdownExtended.pdfDisplayHeaderFooter": true,
    "markdownExtended.pdfHeaderTemplate": "<div style='font-size: 9px; margin: 0 auto;'><span class='title'></span></div><div style='font-size: 9px; margin: 0 auto;'><span class='date'></span></div>",
    "markdownExtended.pdfFooterTemplate": "<div style='font-size: 9px; margin: 0 auto;'><span class='pageNumber'></span> / <span class='totalPages'></span></div>",
    "markdownExtended.pdfMarginTop": "0cm",
    "markdownExtended.pdfMarginBottom": "0cm",
    "markdownExtended.pdfMarginLeft": "0cm",
    "markdownExtended.pdfMarginRight": "0cm",
    /* beautify */
    "beautify.config": {
        // all
        "eol": "\n", // 默认:"\n"
        "end_with_newline": false, // 默认:false
        "indent_char": " ", // 默认:" "
        "indent_size": 4, // 默认:4
        "indent_with_tabs": false, // 默认:false
        "preserve_newlines": true, // 默认:true
        // js, html
        "brace_style": "collapse,preserve-inline", // 默认:"collapse"
        "max_preserve_newlines": 1, // 默认:10
        "wrap_line_length": 0, // 默认:0
        // js
        "break_chained_methods": false, // 默认:false
        "comma_first": false, // 默认:false
        "e4x": false, // 默认:false
        "indent_level": 0, // 默认:0
        "jslint_happy": false, // 默认:false
        "keep_array_indentation": true, // 默认:false
        "keep_function_indentation": false, // 默认:false
        "operator_position": "after-newline", // 默认:"before-newline"
        "space_after_anon_function": true, // 默认:false
        "space_before_conditional": true, // 默认:true
        "space_in_empty_paren": false, // 默认:false
        "space_in_paren": false, // 默认:false
        "unescape_strings": false, // 默认:false
        "unindent_chained_methods": false, // 默认:false
        // html
        "extra_liners": [
            // 默认
            "head",
            "body",
            "/html"
            // 自定义
        ],
        "indent_body_inner_html": true, // 默认:true
        "indent_handlebars": false, // 默认:false
        "indent_head_inner_html": true, // 默认:true
        "indent_inner_html": false, // 默认:false
        "indent_scripts": "normal", // 默认:"normal"
        "wrap_attributes": "auto", // 默认:"auto"
        "wrap_attributes_indent_size": 4, // 默认:同'indent_size'
        "unformatted": [
            // 默认
            // "a",
            "abbr",
            "area",
            "audio",
            "b",
            "bdi",
            "bdo",
            // "br",
            // "button",
            "canvas",
            "cite",
            "code",
            "data",
            "datalist",
            "del",
            "dfn",
            "em",
            "embed",
            "i",
            // "iframe",
            // "img",
            // "input",
            "ins",
            "kbd",
            "keygen",
            // "label",
            "map",
            "mark",
            "math",
            "meter",
            "noscript",
            "object",
            "output",
            "progress",
            "q",
            "ruby",
            "s",
            "samp",
            // "select",
            "small",
            // "span",
            "strong",
            "sub",
            "sup",
            "svg",
            "template",
            // "textarea",
            "time",
            "u",
            "var",
            "video",
            "wbr",
            "text",
            "acronym",
            "address",
            "big",
            // "dt",
            "ins",
            "strike",
            // "tt"
            // 自定义
        ],
        "content_unformatted": [
            // 默认
            "pre"
            // 自定义
        ],
        "void_elements": [
            // 默认
            "area",
            "base",
            "br",
            "col",
            "embed",
            "hr",
            "img",
            "input",
            "keygen",
            "link",
            "menuitem",
            "meta",
            "param",
            "source",
            "track",
            "wbr",
            "!doctype",
            "?xml",
            "?php",
            "basefont",
            "isindex"
            // 自定义
        ],
        // css
        "newline_between_rules": false, // 默认:false
        "selector_separator_newline": true, // 默认:true
        "space_around_combinator": false, // 默认:false
        // ？？
        // "eval_code": false, // 默认:
    },
    // "beautify.ignore": [],
    "beautify.language": {
        "js": {
            "type": [
                "javascript",
                "typescript"
            ],
            "filename": [
                ".jshintrc",
                ".jsbeautify"
            ]
        },
        "css": [
            "css",
            "scss"
        ],
        "html": [
            "htm",
            "html"
        ]
    },
    /* javascript */
    "[javascript]": {
        "editor.rulers": [
            80,
            120,
            140
        ],
        "editor.wordWrap": "off"
    },
    "javascript.format.enable": false,
    /* html */
    "[html]": {
        "editor.rulers": [
            80,
            120,
            140
        ],
        "editor.wordWrap": "off"
    },
    "html.format.enable": false,
    // "html.format.endWithNewline": false,
    // "html.format.indentHandlebars": true,
    // "html.format.indentInnerHtml": true,
    // "html.format.extraLiners": "head,body,/html",
    // "html.format.contentUnformatted": "pre,code,textarea",
    // "html.format.unformatted": "wbr,b,i",
    // "html.format.maxPreserveNewLines": 1,
    // "html.format.preserveNewLines": true,
    // "html.format.wrapAttributes": "aligned-multiple",
    // "html.format.wrapLineLength": 140,
    "htmlhint.documentSelector": [
        "html",
        "htm"
    ],
    "htmlhint.enable": true,
    "htmlhint.options": {
        "tagname-lowercase": true,
        "attr-lowercase": true,
        "attr-value-double-quotes": false,
        "doctype-first": false,
        "tag-pair": true,
        "spec-char-escape": true,
        "id-unique": true,
        "src-not-empty": true,
        "attr-no-duplication": true,
        "title-require": true
    },
    /* css */
    "[css]": {
        "editor.rulers": [
            80,
            120,
            140
        ],
        "editor.wordWrap": "off"
    },
    "css.lint.boxModel": "warning",
    "css.lint.duplicateProperties": "warning",
    "css.lint.fontFaceProperties": "ignore",
    "css.lint.zeroUnits": "warning",
    "css.validate": true,
    /* xml */
    "[xml]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.rulers": [
            80,
            120,
            140
        ],
        "editor.wordWrap": "off"
    },
    /* yaml */
    "[yaml]": {
        "editor.rulers": [
            80,
            120,
            140
        ],
        "editor.tabSize": 2,
        "editor.autoIndent": true
    },
    /* json */
    "json.format.enable": true,
    "[json]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.rulers": [
            80,
            120,
            140
        ],
        "editor.wordWrap": "on"
    },
    "[jsonc]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.rulers": [
            80,
            120,
            140
        ],
        "editor.wordWrap": "on"
    },
    /* python */
    "[python]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.rulers": [
            80,
            120,
            140
        ],
        "editor.wordWrap": "off"
    }
}
