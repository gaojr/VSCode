  "less.validate": false,
  "scss.validate": false,
  "[css]": {
    "editor.rulers": [80, 120, 140]
  },
  "[less]": {
    "editor.rulers": [80, 120, 140]
  },
  "[scss]": {
    "editor.rulers": [80, 120, 140]
