{
  "workbench.enableExperiments": false,
  "workbench.activityBar.visible": true,
  "workbench.statusBar.visible": true,
  "workbench.settings.editor": "ui",
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.activeIconPack": "vue_vuex",
  "workbench.colorTheme": "One Dark Pro",
  "workbench.colorCustomizations": {
    // "bookmarks.lineBackground": "#fb7efb01"
  },
  "workbench.editor.pinnedTabSizing": "compact",
  "editor.maxTokenizationLineLength": 10000,
  "editor.multiCursorModifier": "alt",
  "editor.semanticHighlighting.enabled": true,
  "editor.detectIndentation": true,
  "editor.tabSize": 2,
  // 'Sarasa Mono SC' // 中英等宽
  // 'Fira Code','PT Mono','DejaVu Sans Mono','Cascadia Code PL',monaco // 英文黑体
  // 'HYQiHei 55S' // 无衬线sans
  // 'HYYiSongW','A-OTF Outai Kaisho Std' // 衬线serif
  "editor.fontFamily": "'Fira Code','PT Mono','DejaVu Sans Mono','HYQiHei 55S',monospace,'Microsoft YaHei',fontawesome",
  "editor.fontSize": 14,
  "editor.fontLigatures": "'ss06', 'ss07'",
  "editor.scrollBeyondLastLine": false,
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": false,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.quickSuggestions": {
    "strings": false,
    "comments": false,
    "other": true
  },
  "editor.accessibilitySupport": "off",
  "editor.parameterHints.cycle": true,
  "editor.quickSuggestionsDelay": 100,
  "editor.snippetSuggestions": "top",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.matchBrackets": "never",
  "editor.minimap.enabled": false,
  "editor.minimap.maxColumn": 120,
  "editor.minimap.renderCharacters": true,
  "editor.wordWrap": "on",
  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",
  "editor.renameOnType": true,
  "zenMode.hideActivityBar": false,
  "files.defaultLanguage": "markdown",
  "files.hotExit": "onExitAndWindowClose",
  "files.encoding": "utf8",
  "files.autoGuessEncoding": true,
  "files.simpleDialog.enable": false,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.idea": true
  },
  "files.associations": {
    "*.txt": "markdown",
    "*.ftl": "xml",
    "*.extension": "html",
    "*.vue": "html"
  },
  "window.menuBarVisibility": "default",
  "window.newWindowDimensions": "inherit",
  "window.restoreWindows": "all",
  "window.title": "${dirty}${activeEditorShort}${separator}${rootName}",
  "window.titleBarStyle": "custom",
  "window.zoomLevel": 0,
  "diffEditor.ignoreTrimWhitespace": true,
  "diffEditor.renderSideBySide": true,
  "search.collapseResults": "auto",
  "search.exclude": {
    "**/bower_components": true,
    "**/node_modules": true,
    "**/out": true,
    "**/target": true,
    "**/.mvn": true
  },
  "search.searchEditor.reusePriorSearchConfiguration": true,
  "search.showLineNumbers": true,
  "search.useReplacePreview": false,
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "terminal.integrated.rendererType": "auto",
  "terminal.integrated.fontFamily": "'Fira Code','Sarasa Mono SC',fontawesome",
  "terminal.integrated.cursorStyle": "line",
  "breadcrumbs.enabled": true,
  "breadcrumbs.symbolSortOrder": "name",
  "update.mode": "none",
  "update.enableWindowsBackgroundUpdates": false,
  /* 同步 */
  "settingsSync.ignoredSettings": ["-git.path"],
  "settingsSync.ignoredExtensions": [],
  /* 扩展相关 */
  "extensions.autoUpdate": false,
  "extensions.ignoreRecommendations": false,
  "extensions.showRecommendationsOnlyOnDemand": true,
  /* git */
  "git.enabled": true,
  "git.path": "%GIT_HOME%\\bin\\git.exe",
  "git.alwaysShowStagedChangesResourceGroup": true,
  "git.autorefresh": true,
  "git.branchSortOrder": "alphabetically",
  "git.enableStatusBarSync": false,
  "git.ignoreMissingGitWarning": true,
  "git.ignoreLegacyWarning": true,
  "git.suggestSmartCommit": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.codeLens.scopes": ["document"],
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.recentChange.command": "gitlens.toggleFileBlame",
  "gitlens.defaultDateFormat": "YYYY-MM-DD HH:mm",
  "gitlens.defaultDateShortFormat": "YY-M-D H:m",
  "gitlens.defaultDateStyle": "relative",
  "gitlens.defaultGravatarsStyle": "retro",
  "gitlens.blame.avatars": false,
  "gitlens.blame.ignoreWhitespace": true,
  "gitlens.blame.dateFormat": "YYYYMMDD",
  "gitlens.blame.format": "${date} ${author|8}", // 责问
  "gitlens.blame.heatmap.location": "left",
  "gitlens.blame.highlight.locations": [
    // "gutter",// 行号
    "line", // 行
    "overview" // 滚动栏
  ],
  "gitlens.currentLine.enabled": true,
  "gitlens.currentLine.dateFormat": "YYYY-MM-DD",
  "gitlens.currentLine.format": "${author},${date}",
  "gitlens.statusBar.enabled": false,
  "gitlens.statusBar.alignment": "left",
  "gitlens.statusBar.dateFormat": "YYYY-MM-DD HH:mm",
  "gitlens.statusBar.format": "${date} (${id}) ${message}", // 状态栏
  "gitlens.hovers.avatars": false,
  "gitlens.hovers.annotations.over": "annotation",
  "gitlens.hovers.detailsMarkdownFormat": "**${author}**, ${ago} *(${date})* \n\n${message}\n\n${commands}",
  "gitlens.advanced.messages": {
    "suppressFileNotUnderSourceControlWarning": true,
    "suppressShowKeyBindingsNotice": true
  },
  "gitlens.views.commitFileFormat": "${filePath}",
  "gitlens.views.commitFileDescriptionFormat": "${directory}${ ← originalPath}",
  "gitlens.views.commitFormat": "${author}>${message}",
  "gitlens.views.commitDescriptionFormat": "${changes • }${author}, ${agoOrDate}",
  "gitlens.views.stashDescriptionFormat": "${changes • }${agoOrDate}",
  "gitlens.views.stashFileDescriptionFormat": "${directory}${ ← originalPath}",
  "gitlens.views.stashFileFormat": "${filePath}",
  "gitlens.views.stashFormat": "${author}>${message}",
  "gitlens.views.statusFileDescriptionFormat": "${directory}${ ← originalPath}",
  "gitlens.views.statusFileFormat": "${working}${filePath}",
  "gitlens.views.compare.enabled": true,
  "gitlens.views.compare.location": "scm",
  "gitlens.views.fileHistory.enabled": true,
  "gitlens.views.fileHistory.location": "scm",
  "gitlens.views.lineHistory.enabled": true,
  "gitlens.views.lineHistory.location": "scm",
  "gitlens.views.repositories.enabled": true,
  "gitlens.views.repositories.location": "scm",
  "gitlens.views.repositories.avatars": false,
  "gitlens.views.repositories.showBranchComparison": false,
  "gitlens.views.search.enabled": true,
  "gitlens.views.search.location": "scm",
  "gitlens.recentChanges.highlight.locations": ["gutter", "line", "overview"],
  "gitlens.sortBranchesBy": "name:asc",
  "gitlens.menus": {
    "editor": false,
    "editorGroup": {
      "blame": true,
      "compare": true
    },
    "editorTab": false,
    "explorer": false,
    "scmGroup": {
      "compare": false,
      "openClose": true,
      "stash": true,
      "stashInline": true
    },
    "scmItem": {
      "clipboard": true,
      "compare": false,
      "history": false,
      "remote": false,
      "stash": true
    }
  },
  "git-graph.commitDetailsView.location": "Docked to Bottom",
  "git-graph.customBranchGlobPatterns": [
    { "name": "release", "glob": "*/release/*" },
    { "name": "本地", "glob": "heads/*" }
  ],
  "git-graph.defaultColumnVisibility": {
    "Date": true,
    "Author": true,
    "Commit": false
  },
  "git-graph.repository.commits.fetchAvatars": false,
  "git-graph.repository.fetchAndPrune": true,
  "git-graph.dialog.addTag.pushToRemote": true,
  "git-graph.dialog.createBranch.checkOut": true,
  "git-graph.dialog.addTag.type": "Lightweight",
  "git-graph.repository.commits.initialLoad": 100,
  "git-graph.repository.commits.loadMore": 50,
  "git-graph.showStatusBarItem": false,
  "git-graph.contextMenuActionsVisibility": {
    "remoteBranch": {
      "checkout": true,
      "delete": true,
      "fetch": true,
      "pull": false,
      "copyName": true
    },
    "stash": {
      "apply": true,
      "createBranch": false,
      "pop": true,
      "drop": true,
      "copyName": false,
      "copyHash": true
    }
  },
  "gitmoji.outputType": "code",
  "gitmoji.additionalEmojis": [
  ],
  "gitmoji.onlyUseAdditionalEmojis": false,
  /* markdown */
  "markdown.preview.breaks": true,
  "markdown.preview.fontFamily": "'Fira Code','HYQihei 55S'",
  "markdown.preview.lineHeight": 1.4,
  "markdown.preview.doubleClickToSwitchToEditor": false,
  "markdown.styles": [
    // TODO "https://raw.githubusercontent.com/raycon/vscode-markdown-style/master/preview/github.css"
    // TODO "https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
  ],
  "[markdown]": {
    "files.trimTrailingWhitespace": false,
    "editor.tabSize": 4,
    "editor.fontFamily": "'Sarasa Mono SC'"
  },
  "markdown.extension.toc.levels": "2..4",
  "markdown.extension.italic.indicator": "*",
  "markdown.extension.list.indentationSize": "inherit",
  "markdown.extension.print.absoluteImgPath": false,
  "markdown.extension.toc.unorderedList.marker": "*",
  "markdown.extension.toc.orderedList": true,
  "markdown.extension.syntax.decorations": false,
  "markdown.extension.syntax.plainTheme": true,
  "markdown.extension.toc.plaintext": false,
  "markdownExtended.disabledPlugins": "container",
  /* front matter */
  "frontMatter.taxonomy.dateFormat": "yyyy-MM-dd HH-mm-ss",
  "frontMatter.taxonomy.categories": [],
  "frontMatter.taxonomy.tags": [],
  /* bookmark */
  "bookmarks.showCommandsInContextMenu": false,
  "bookmarks.navigateThroughAllFiles": true,
  /* togglequotes */
  "togglequotes.chars": ["\"", "'"],
